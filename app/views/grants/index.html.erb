<h1>Listing grants</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Amount</th>
    <th>Date awarded</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @grants.each do |grant| %>
  <tr>
    <td><%= grant.title %></td>
    <td><%= number_to_currency(grant.amount) %></td>
    <td><%= grant.date_awarded %></td>
    <td><%= link_to 'Show', grant %></td>
    <td><%= link_to 'Edit', edit_grant_path(grant) %></td>
    <td><%= link_to 'Destroy', grant, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

